<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="580.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <MenuBar fx:id="menuBar" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
        <menus>
          <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu fx:id="menuHelp" mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="tabMain" text="Home">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <ListView fx:id="listCars" prefHeight="200.0" prefWidth="200.0" />
                        <HBox>
                           <children>
                              <ImageView fx:id="imageCar" fitHeight="250.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
                              <VBox HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="Car Details">
                                       <font>
                                          <Font size="17.0" />
                                       </font>
                                    </Label>
                                    <GridPane vgap="10.0" VBox.vgrow="SOMETIMES">
                                       <columnConstraints>
                                          <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="-Infinity" minWidth="80.0" prefWidth="80.0" />
                                          <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" valignment="TOP" vgrow="ALWAYS" />
                                       </rowConstraints>
                                       <children>
                                          <Label fx:id="lblCarID" text="Label" wrapText="true" GridPane.columnIndex="1" />
                                          <Label fx:id="lblCarDisplayName" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                          <Label fx:id="lblCarDescription" text="Label" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                          <Label text="ID:" />
                                          <Label text="Display name:" GridPane.rowIndex="1" />
                                          <Label text="Description:" GridPane.rowIndex="2" />
                                       </children>
                                    </GridPane>
                                 </children>
                                 <padding>
                                    <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                                 </padding>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
          </Tab>
          <Tab fx:id="tabSecondary" disable="true" text="Todo">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0" />
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
</BorderPane>
